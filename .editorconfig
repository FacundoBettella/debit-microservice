# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
quote_type = single

[{src}/**.{ts,json,js}]
end_of_line =crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
quote_type = single
